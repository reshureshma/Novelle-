            background-repeat: no-repeat;
            background-position: 10px center;
            padding-left: 40px;
        }
        
        .search-bar input:focus {
            border-color: #0b2656;
        }
        
        .add-product-btn {
            padding: 12px 20px;
            background-color: #0b2656;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s ease;
            text-transform: uppercase;
        }
        
        .add-product-btn:hover {
            background-color: #0a1f4d;
        }
        
        .product-table {
            width: 100%;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        
        .product-table-header {
            background-color: #0b2656;
            color: white;
            padding: 15px 20px;
            display: grid;
            grid-template-columns: 80px 2fr 1fr 1fr 1fr 1fr 1fr;
            font-size: 14px;
            font-weight: 500;
            text-transform: uppercase;
        }
        
        .product-table-row {
            display: grid;
            grid-template-columns: 80px 2fr 1fr 1fr 1fr 1fr 1fr;
            padding: 15px 20px;
            border-bottom: 1px solid #f0f0f0;
            align-items: center;
        }
        
        .product-table-row:last-child {
            border-bottom: none;
        }
        
        .product-table-cell {
            font-size: 14px;
            display: flex;
            align-items: center;
        }
        
        .product-img {
            width: 60px;
            height: 80px;
            object-fit: cover;
            border-radius: 3px;
        }
        
        .update-btn, .delete-btn {
            padding: 8px 12px;
            border: none;
            border-radius: 3px;
            color: white;
            font-size: 12px;
            cursor: pointer;
            transition: background-color 0.2s ease;
            text-transform: uppercase;
        }
        
        .update-btn {
            background-color: #1890ff;
            margin-right: 5px;
        }
        
        .update-btn:hover {
            background-color: #40a9ff;
        }
        
        .delete-btn {
            background-color: #f5222d;
        }
        
        .delete-btn:hover {
            background-color: #ff4d4f;
        }
        
        .action-buttons {
            display: flex;
        }
        
        .pagination {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
            align-items: center;
        }
        
        .pagination-info {
            color: #666;
            font-size: 14px;
            margin-right: auto;
        }
        
        .pagination-btn {
            width: 35px;
            height: 35px;
            border: 1px solid #e0e0e0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 5px;
            cursor: pointer;
            transition: all 0.2s ease;
            background-color: white;
        }
        
        .pagination-btn.active {
            background-color: #0b2656;
            color: white;
            border-color: #0b2656;
        }
        
        .pagination-btn:hover:not(.active) {
            background-color: #f5f5f5;
        }
        
        .pagination-btn.arrow {
            font-size: 18px;
        }
        
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 8px;
        }
        
        .status-indicator.in-stock {
            background-color: #52c41a;
        }
        
        .status-indicator.low-stock {
            background-color: #faad14;
        }
        
        .status-indicator.out-of-stock {
            background-color: #f5222d;
        }
        
        .icon {
            width: 20px;
            height: 20px;
            display: inline-block;
            margin-right: 10px;
        }
        
        .badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 3px;
            font-size: 12px;
            font-weight: 500;
            color: white;
        }
        
        .badge.yes {
            background-color: #52c41a;
        }
        
        .badge.no {
            background-color: #f5222d;
        }
    </style>
</head>
